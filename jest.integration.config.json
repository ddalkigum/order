{
  "moduleFileExtensions": ["js", "ts", "json"],
  "rootDir": ".",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testRegex": "(integration\\.|/)(test|spec)\\.(js|ts)$",
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/$1"
  },
  "clearMocks": true,
  "testPathIgnorePatterns": ["/node_modules/", "!*.d.ts"],
  "coveragePathIgnorePatterns": ["/node_modules/", "!*.d.ts"],
  "collectCoverage": true,
  "coverageThreshold": {
    "global": {
      "statements": 70
    }
  }
}
